import numpy
#from gnuradio import gr
import gras
from Bode_Plot.bode_demo import num
class expo(gras.Block):
    """
    docstring for block expo
    """
    def __init__(self):
        gras.Block.__init__(self,
            name="expo",
            in_sig=[numpy.float32],
            out_sig=[numpy.float32])


    def work(self, input_items, output_items):
        in0 = input_items[0]
        out = output_items[0]
        o1 = []
        o2 = []
        o3 = []
        ans = []
        o1 = 1
       
        #o2 = -numpy.exp(-2*in0[0:1])
        #o3 = -numpy.exp(-3*in0[0:1])
        o2 = ((-numpy.exp(-in0[0:1]))*(numpy.sin(in0[0:1])+2))
        #out[0:1] = numpy.exp(-in0[0:1])
        ans.append(o1+o2)
        print("output sending",ans)
        out[0:1] = ans
         
        
        self.consume(0,1)
        self.produce(0,1)
        #return len(output_items[0])

