import pylab as pl
t = pl.linspace(-pl.pi, pl.pi, 10000) #plot  t+3cos(2t) in the interval [-pi,pi]
y = -t+3*pl.cos(2*t)

#Decorating a graph

pl.xlabel('t')
pl.ylabel('y')
pl.plot(t,y)
pl.axis([-3.0,3.0,-7.0,4.0]) #[tmin,tmax,ymin,ymax]
pl.title('My First plot Demo')
pl.legend(('Simple plot'))
pl.xlabel('Time')
pl.ylabel('Velocity')
pl.savefig('firstplot.eps')
pl.show()